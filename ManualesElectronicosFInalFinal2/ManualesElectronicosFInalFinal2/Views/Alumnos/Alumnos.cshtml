@model ViewModelAlumnos


@{
	ViewData["Title"] = "Alumnos";
	Layout = "~/Views/Shared/Layout.cshtml";

}
	<head>
		<script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
	<script src="~/jquery.js" ></script>

		<style>
			.modal {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-color: rgba(0,0,0,.5);
				display: none;
			}

				.modal div {
					background-color: white;
					margin: 20px auto;
					width: 500px;
				}
		</style>

	</head>
<h2 style="text-align:center">Alumnos</h2>
<a style="text-align:start; float:left; margin-right:500px; margin-left:610px" asp-action="Agregar" asp-controller="Alumnos" class="btn btn-primary">Agregar Alumno</a>

<a href="javascript:showModal('modalAgregar')"><i class="fa fa-plus"></i> Agregar Alumno</a>



@foreach (var item in Model.Alumnos)
{

	<div class="card" style="width: 18rem;">

		<div class="card-body">
			<h5 class="card-title">@item.Nombre</h5>
			<p class="card-text">@item.NumeroControl</p>
			<p></p>
			<a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-primary" asp-controller="Alumnos">Eliminar Alumno</a>
			<a asp-action="EditarAlumnos" asp-route-id="@item.Id" class="btn btn-primary" asp-controller="Alumnos">Editar Alumno</a>
		</div>
	</div>
}

<div class="modal" id="modalAgregar">
	<div>
		<h1>Agregar Especies</h1>
		@*Es necesario agregar la clase formAjax definida en util.js*@

		<form class="formAjax" method="post" action="~/Alumnos/Agregar">
			<label>Nombre:</label>
			<input required asp-for="Alumno.Nombre" />
			<label>Clase:</label>


			<p class="error"></p>

			<input type="submit" value="Agregar" />
			<a href="~/Alumnos">
				<input type="button" value="Cancelar" />
			</a>
		</form>
	</div>
</div>

<script src="~/util.js"></script>