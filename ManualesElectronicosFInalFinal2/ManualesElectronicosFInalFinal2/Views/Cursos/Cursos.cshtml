@model IEnumerable<Curso>
@{
//ViewData["Title"] = "Cursos";
}



    <html>
    <head>
        <meta charset="utf-8" />
        <title></title>
        @*<link href="~/Views/Cursos/style.css" rel="stylesheet" />*@
    </head>



    <body>
        <a style="text-align:start; float:left; margin-right:500px; margin-left:610px" asp-action="AgregarCurso" asp-controller="Cursos" class="btn btn-primary">Agregar Cursp</a>

        <div class="card" style="width: 18rem;">
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem;">

                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">@item.Clave</p>
                        <p></p>
                        <a asp-action="EliminarCurso" asp-route-id="@item.Id" class="btn btn-primary" asp-controller="Cursos">Eliminar Curso</a>
                        <a asp-action="EditarCurso" asp-route-id="@item.Id" class="btn btn-primary" asp-controller="Cursos">Editar Curso</a>
                    </div>
                </div>
            }
        </div>
    </body>
    </html>