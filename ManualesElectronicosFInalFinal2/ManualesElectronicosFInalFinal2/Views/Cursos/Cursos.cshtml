@model ManualesElectronicosFInalFinal2.Models.ViewModelCurso
@{
    ViewData["Title"] = "Cursos";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<head>
    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>



    <style>
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,.5);
            display: none;
        }

            .modal div {
                background-color: white;
                margin: 20px auto;
                width: 500px;
            }
    </style>


    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
</head>



<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="~\css\style.css" rel="stylesheet" />
</head>


<a href="javascript:showModal('modalAgregar')"><i class="fa fa-plus"></i> Agregar Cursoo</a>
<body>
    <a style="text-align:start; float:left; margin-right:500px; margin-left:610px" asp-action="AgregarCurso" asp-controller="Cursos" class="btn btn-primary">Agregar Curso</a>


    <div class="card" style="width: 18rem;">
        @foreach (var item in Model.Cursos)
        {
            <div class="card" style="width: 18rem;">

                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">@item.Clave</p>
                    <p></p>
                    <a asp-action="EliminarCurso" asp-route-id="@item.Id" class="btn btn-primary" asp-controller="Cursos">Eliminar Curso</a>
                    <a href="javascript:eliminar(@item.Id)"><i class="fa fa-remove"></i> Eliminar</a>

                    <a asp-action="EditarCurso" asp-route-id="@item.Id" class="btn btn-primary" asp-controller="Cursos">Editar Curso</a>
                    <a href="javascript:editar(@item.Id)"><i class="fa fa-edit"></i> Editar</a>
                </div>
            </div>
        }
    </div>
</body>

<div class="modal" id="modalAgregar">
    <div>
        <h1>Agregar Curso</h1>
        @*Es necesario agregar la clase formAjax definida en util.js*@

        <form class="formAjax" method="post" action="~/Cursos/Agregar">
            <label>Nombre:</label>
            <input required asp-for="Curso.Nombre" />
            <label>Fecha Inicio:</label>
            <input type="date" required asp-for="Curso.FechaInicio" />
            <label>Fecha Final:</label>
            <input type="date" required asp-for="Curso.FechaFinal" />
            <p class="error"></p>

            <input type="submit" value="Agregar" />
            <a href="~/Cursos/Cursos">
                <input type="button" value="Cancelar" />
            </a>
        </form>
    </div>
</div>

<div id="modalEliminar" class="modal">
    <div>
        <h1>Eliminar Cursp</h1>

        <form class="formAjax" method="post" action="~/Cursos/Eliminar">
            <input id="deleteId" type="hidden" name="Id" />
            <p><b>¿Está seguro de eliminar el curso?</b></p>

            <p class="error"></p>

            <input type="submit" value="Si" />
            <a href="~/Cursos/Cursos">
                <input type="button" value="No" />
            </a>
        </form>
    </div>
    <script>
        function eliminar(id) {
            $("#deleteId").val(id);
            showModal("modalEliminar");
        }
    </script>
</div>

<div id="modalEditar" class="modal">
    <div>
        <h1>Editar Curso</h1>

        <form class="formAjax" method="post" action="~/Cursos/EditarCurso">
            @*<input id="editId" type="hidden" asp-for="Alumno.Id" />*@
            <label>Nombre:</label>
            <input id="editNombre" required asp-for="Curso.Nombre" type="text" />
            @*<label>Carrera:</label>*@
            @*<select id="editIdCarrera" required asp-for="Alumno.IdCarrera" asp-items="@(new SelectList(Model.Alumno, "Id", "Nombre"))">
                    <option value="">Seleccione una clase</option>
                </select>*@

            <label>Fecha Inicio:</label>
            <input id="editInicio" required asp-for="Curso.FechaInicio" />

            <label>Fecha Final:</label>
            <input id="editFinal" required asp-for="Curso.FechaFinal" />



            <p class="error"></p>

            <input type="submit" value="Guardar" />
            <a href="~/Cursos/Cursos">
                <input type="button" value="Cancelar" />
            </a>
        </form>
        <script>
		function editar(id) {
			$.post('@Url.Action("GetCurso", "Cursos")', { "id": id }, function (data, status) {
				if (data != false) {

					var x = $("#modalEditar form");
					x.find("#editId").val(data.id);
					x.find("#editNombre").val(data.nombre);
					x.find("#editInicio").val(data.fechaInicio);
                    x.find("#editFinal").val(data.fechaFinal);
					x.find('#editIdCarrera option[value="' + data.idCarrera + '"]').attr('selected', true)
					showModal("modalEditar");
				}
			});
		}
        </script>
    </div>
</div>