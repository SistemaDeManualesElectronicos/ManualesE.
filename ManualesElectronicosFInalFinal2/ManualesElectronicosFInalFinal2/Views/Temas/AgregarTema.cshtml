
@{
    ViewData["Title"] = "AgregarTema";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="~/Views/Cursos/style.css" rel="stylesheet" />
</head>
<body>
    <style>
        body {
            background: #2f313d;
            font-family: sans-serif;
            font-size: 20px;
        }

        h2 {
            color: whitesmoke;
            font-size: 30px;
            text-align: center;
            margin-bottom: 10px;
        }

        form {
            width: 50%;
            position: absolute;
            left: 22%;
            background: rgba(0,0,0,0.3);
            padding: 20px 30px;
            color: whitesmoke;
            border-radius: 15px;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 15px 0px;
            background: transparent;
            border: 0;
            border-bottom: 1px solid rgba(255,255,255,0.04);
            outline: none;
            color: white;
            font-size: 12px;
        }

        input[type="submit"], button {
            background: #008F63;
            border: 0;
            width: 250px;
            height: 40px;
            border-radius: 3px;
            color: white;
            cursor: pointer;
            transition: background 0.3s ease-in-out;
            font-size: 20px;
            margin: 40px;
        }
    </style>
    <section>
        <form>
            <div>
                <h2>Agregar Tema</h2>
            </div>
            <input type="text" placeholder="Nombre del tema" /><br />

            <select></select>

            <div>
                <input type="submit" value="Agregar" />
                <button>Cancelar</button>

            </div>
            <div>
                <p>@Html.ValidationSummary()</p>
            </div>
        </form>
    </section>
</body>
</html>

