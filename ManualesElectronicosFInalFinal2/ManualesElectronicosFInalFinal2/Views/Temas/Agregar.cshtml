@model Temas
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="~/Views/Cursos/style.css" rel="stylesheet" />
</head>
<body>
    <section>
        <form method="post" asp-action="Agregar">
            <div>
                <h2>Agregar Tema</h2>
            </div>
            <input asp-for="Encabezado" type="text" placeholder="Nombre del tema" /><br />

            

            <div>
                <input type="submit" value="Agregar" />
                <button>Cancelar</button>

            </div>
            <div>
                <p>@Html.ValidationSummary()</p>
            </div>
        </form>
    </section>
</body>
</html>
