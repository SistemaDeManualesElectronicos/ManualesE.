@inject DocenteService service
@model Docentes
@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

    <section>
        <form method="post" asp-action="Agregar">
            <div class="caption">
                <h2>Agregar Docente</h2>
            </div>
            <label>Nombre:</label>
            <input asp-for="Nombre" type="text" /><br />
            <label>Numero De Control</label>
            <input asp-for="NumeroDeControl" type="text" /><br />
            @*<label>Carrera:</label>
            <input asp-for="Carrera" type="text" /><br />*@
           

            <select asp-for="IdCarrera" asp-items="@(new SelectList(service.GetCarreras(),"Id", "Nombre"))"></select>

            <div class="botones" style="padding:5px">
                <input type="submit" value="Agregar" />
                <button asp-action="Docentes">Cancelar</button>

            </div>

            <div>
                <p>@Html.ValidationSummary()</p>
            </div>


        </form>

       </section>
