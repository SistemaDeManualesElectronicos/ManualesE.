@model Docentes
@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

    <section>
        <form asp-action="Agregar" method="post" name="Agregar">
            <div class="caption">
                <h2>Agregar Docente</h2>
            </div>
            <label>Nombre:</label>
            <input asp-for="Nombre" type="text" /><br />
            <label>Precio:</label>
            <input asp-for="NumeroDeControl" type="text" /><br />
            <label>Descripcion:</label>
            <input asp-for="Carrera" type="text" /><br />
            

            <div class="botones" style="padding:5px">
                <input type="submit" value="Agregar" />
                <button asp-action="Menu">Cancelar</button>

            </div>


        </form>

       </section>
