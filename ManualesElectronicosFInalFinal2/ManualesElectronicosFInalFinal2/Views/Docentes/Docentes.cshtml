@model IEnumerable<Docentes>
@{
    ViewData["Title"] = "Docentes";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="text-align:center">Docentes</h2>
<a style="text-align:start; float:left; margin-right:500px; margin-left:610px" asp-action="Agregar" asp-controller="Docentes" class="btn btn-primary">Agregar Docente</a>

@foreach (var item in Model)
{


    <div class="card" style="width: 18rem;">

        <div class="card-body">
            <h5 class="card-title">@item.Nombre</h5>
            <p class="card-text">@item.NumeroDeControl</p>
            <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-primary" asp-controller="Docentes">Eliminar Docente</a>
            <a asp-action="EditarDocentes" asp-route-id="@item.Id" class="btn btn-primary" asp-controller="Docentes">Editar  Docente</a>
        </div>
    </div>
}
