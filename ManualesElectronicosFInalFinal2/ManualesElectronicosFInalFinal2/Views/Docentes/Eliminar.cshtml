@model Docentes
@{
    Layout = null;
}

    <form method="post" action="~/Docentes/Eliminar" >
        <div>
            <h1>Eliminar Doncente</h1>

            <input type="hidden" id="id" asp-for="Id"   />

            <p>¿Está seguro de eliminar la categoría "<span id="nombreDocente">@Model.Nombre</span>"?</p>

            <div class="botones">
                <p id="error">
                    @Html.ValidationSummary()
                </p>
                <input type="submit" value="Si" id="btnSi" />
                <input onclick="history.back()" type="button" value="No" id="btnNo" formnovalidate="formnovalidate" />
            </div>
        </div>
    </form>