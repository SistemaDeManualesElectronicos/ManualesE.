@model ManualesElectronicosFInalFinal2.Models.DocentesViewModels.SubtemasViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html style="        background-color: whitesmoke;">
<head>
    <link href="~/Content/estilos.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
    <link href="~/Content/OtrosColores.css" rel="stylesheet" />
    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <link href="~/Content/sidebar.css" rel="stylesheet" />
    <!-- Para usar iconos con FontAwesome  -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <script src="jquery-3.5.0.min"></script>
    <script src="util.js"></script>
  
    <script src="https://cdn.tiny.cloud/1/000kyaippw4hcazl7rr5odphr0eguildpbtxjvfkov7w6i9j/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
</head>
<body style="background-color:whitesmoke;">
    <nav class="menu" id="sidebar">
        <div>
        </div>
        <ul>
            <li><a asp-action="Docentes" asp-controller="Docentes"><i class="fa fa-address-card"></i>Docentes</a></li>
            <li><a asp-action="Alumnos" asp-controller="Alumnos"><i class="fa fa-address-card"></i>Alumnos</a></li>
            <li><a asp-action="Cursos" asp-controller="Cursos"><i class="fa fa-address-card"></i>Cursos</a></li>

        </ul>

    </nav>
    <header>
        <a href="#" class="toggle-btn"><i class="fa fa-bars"></i></a>
        <h1 style="color:white; width:auto; border-bottom:none; text-align:center;"><b>ITESRC</b> Manuales Electronicos</h1>
        <div class="dropdown">
            <a href="#" class="right">
                <i class="fa fa-user"></i>
            </a>
            <ul>
                <li><a style="text-decoration: none; color:black;" href="#"><i class="fa fa-key"></i>Cambiar Contraseña</a></li>
                <li><a style="text-decoration: none; color:black;" href="#"><i class="fa fa-sign-out-alt"></i> Cerrar Sesión</a></li>
            </ul>
        </div>
    </header>
    <section style="margin:100px;border-radius: 5px;">
        <h2 style="text-align: center;background-color: #1CA7D0; border-radius: 5px;">Agregar</h2>
        <textarea>
    Welcome to TinyMCE!
  </textarea>
        <script>
            tinymce.init({
                selector: 'textarea',
                plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name',
            });
        </script>

        <input type="button" value="Agregar" />
        <input type="button" value="cancelar" />
    </section>
    <script src="~/main.js"></script>
    <script src="~/temas.js"></script>
</body>
</html>

